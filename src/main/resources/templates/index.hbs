{{#partial "content"}}
    <section>
        <div class="container">
            <div class="entry-list">
                {{#each entries}}
                    <article>
                        <h2>
                            <a href="/entries/detail/{{ id }}/{{ slugFromTitle }}">{{ title }}</a>
                        </h2>
                        <time datetime="{{ htmlCreationDate }}">
                            {{ creationDateString }}
                        </time>
                        {{#each tags}}
                            <a href="#">#{{ this }}</a>
                        {{/each}}
                    </article>
                {{/each}}
            </div>
        </div>
    </section>
{{/partial}}

{{> base.hbs}}
